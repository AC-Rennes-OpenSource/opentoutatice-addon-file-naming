<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.file.based.naming.widgets">

	<require>org.nuxeo.ecm.platform.forms.layout.WebLayoutManager</require>
	<require>org.nuxeo.ecm.platform.forms.layouts.webapp</require>
	<require>org.nuxeo.ecm.platform.audio.layouts</require>
	<erquire>org.nuxeo.ecm.platform.video.layouts</erquire>

	<extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
		point="widgets">

		<widget name="title" type="text">
			<labels>
				<label mode="any">title</label>
			</labels>
			<translated>true</translated>
			<fields>
				<field>dc:title</field>
			</fields>
			<widgetModes>
				<mode value="view_summary">#{empty layoutValue.dc.title?'hidden':'view'}
				</mode>
			</widgetModes>
			<properties widgetMode="edit">
				<property name="required">#{webActions.isTitleRequired()}</property>
				<property name="styleClass">dataInputText</property>
			</properties>
		</widget>

		<!-- Attached file types -->
		<widget name="file" type="template">
			<labels>
				<label mode="any">label.file.content</label>
			</labels>
			<translated>true</translated>
			<fields>
				<field>file:content</field>
				<field>file:filename</field>
			</fields>
			<properties mode="any">
				<property name="template">/widgets/extended_file_widget.xhtml
				</property>
			</properties>
			<properties widgetMode="edit">
				<property name="required">#{!webActions.isTitleRequired()}</property>
			</properties>
		</widget>

		<widget name="audioFile" type="audio_file">
			<labels>
				<label mode="any">label.file.content</label>
			</labels>
			<translated>true</translated>
			<fields>
				<field>file:content</field>
				<field>file:filename</field>
			</fields>
			<properties widgetMode="edit">
				<property name="required">#{!webActions.isTitleRequired()}</property>
			</properties>
		</widget>

		<widget name="videoFile" type="video_file">
			<labels>
				<label mode="any">label.file.content</label>
			</labels>
			<translated>true</translated>
			<fields>
				<field>file:content</field>
				<field>file:filename</field>
			</fields>
			<properties widgetMode="edit">
				<property name="required">#{!webActions.isTitleRequired()}</property>
			</properties>
		</widget>


	</extension>

</component>